<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/button_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/label_export"/>
    <TextView
        android:id="@+id/label_or_save_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/label_or_file_name"
        android:textAppearance="@style/TitleStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_export"/>
    <EditText
        android:id="@+id/edit_save_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_or_save_name"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>