<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/amount_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/label_amount" />

        <TextView
            android:id="@+id/euro_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_currency"
            android:textSize="16sp"
            android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/recipient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_choose_recipient"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/recipient_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/apply_to_yearly_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_apply_to_yearly_budget"
        android:gravity="center_vertical"/>

</LinearLayout>
