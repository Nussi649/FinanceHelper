<?xml version="1.0" encoding="utf-8"?>
<!-- radio_checked.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryLight" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />
            <size android:width="16dp" android:height="16dp" />
        </shape>
    </item>
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorSecondaryLight" />
            <size android:width="12dp" android:height="12dp" />
        </shape>
    </item>
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimaryDark" />
            <size android:width="8dp" android:height="8dp" />
        </shape>
    </item>
</layer-list>