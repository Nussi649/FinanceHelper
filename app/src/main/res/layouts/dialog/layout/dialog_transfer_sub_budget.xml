<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/direct_sub_budgets_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_sub_budget_select" />

    <Spinner
        android:id="@+id/direct_sub_budgets_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/all_budget_accounts_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_budget_account_target" />

    <Spinner
        android:id="@+id/target_account_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>